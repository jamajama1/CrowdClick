@model ApplicationCore.Models.ProductResponseModel

@{
    ViewData["Title"] = "ProductDetails";
}

<h1>ProductDetails</h1>

<div class="card-body">
    <div class="row">
        <aside class="col-md-6">
            <article class="gallery-wrap">
                <div class="card img-big-wrap">
                    <a href="#"> <img class="rounded" src="@Model.PicUrl"></a>
                </div> <!-- card img-big-wrap.// -->                
            </article> <!-- gallery-wrap .end// -->
        </aside>
        <main class="col-md-6">
            <article>
                <a href="#" class="text-primary btn-link">Clothes</a>
                <h3 class="title">@Model.Name</h3>
                <div>
                    
                </div>

                <hr>

                <div class="mb-3">
@*                    <h6>Short description</h6>*@
                    <ul class="list-dots mb-0">

                    </ul>
                </div>

                <div class="form-group">
                    <label class="text-muted">Available sizes</label>
                    <div>
                        <label class="js-check btn btn-check active">
                            <input type="radio" name="option_size" value="option1" checked="">
                            <span>Small</span>
                        </label>
                        <label class="js-check btn btn-check">
                            <input type="radio" name="option_size" value="option1">
                            <span>Medium</span>
                        </label>
                        <label class="js-check btn btn-check">
                            <input type="radio" name="option_size" value="option1">
                            <span>Large</span>
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <var class="price h4">@Model.Price</var> <br>
                    <span class="monthly">@Model.MOQ Needed to shippout</span>
                </div> <!-- price-detail-wrap .// -->

                <div class="mb-4">
                    <a href="#" class="btn btn-outline-primary">Add to card</a>
                </div>

            </article> <!-- product-info-aside .// -->
        </main> <!-- col.// -->
    </div> <!-- row.// -->
</div>

